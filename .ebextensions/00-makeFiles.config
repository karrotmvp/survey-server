files:
    "/sbin/appstart":
        mode: "000755"
        owner: webapp
        group: webapp
        content: |
            #!/usr/bin/env bash
            JAR_PATH=/var/app/current/survey-0.0.1-SNAPSHOT.jar

            # run app
            killall java
            java -Dfile.encoding=UTF-8 -jar $JAR_PATH
commands:
    set_time_zone:
        command: ln -f -s /usr/share/zoneinfo/Asia/Seoul /etc/localtime